= header "List of Groups", Group, icon: :users, skip_button: true, button: link_to('New Group', new_group_path, class: 'btn btn-success')

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Users
      %th
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= @groups_count[group.id]
        %td.right= object_actions group
