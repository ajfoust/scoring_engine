%h2= "#{@user.username}\'s Injects"
%hr
%table.table
  %thead
    %tr
      %th Inject Title
      %th Submission
      %th Received
      %th.center On Time
  %tbody
    - @injects.each do |inject|
      - @response = inject.inject_responses.where(user_id: params[:user_id]).first
      %tr
        %td= inject.title
        %td
          - if @response
            = link_to @response.submission_file_name, @response.submission.url
          - else
            N/A
        %td
          - if @response
            = @response.updated_at.strftime('%m/%d/%Y %l:%M %P')
          - else
            N/A
        %td.center
          - if @response && @response.on_time?
            = text_icon :ok, color: :green
          - else
            = text_icon :remove, color: :red
